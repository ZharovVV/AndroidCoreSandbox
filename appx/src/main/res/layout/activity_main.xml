<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/to_android_core_sandbox_module"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ds_middle_margin"
        android:text="To android-core-sandbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/to_rx_java_module_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To RxJava Module"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/to_android_core_sandbox_module"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/to_compose_module_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jetpack Compose"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/to_rx_java_module_button"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/to_accessibility_module_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android Accessibility"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/to_compose_module_button"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>