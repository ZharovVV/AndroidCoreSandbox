<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.github.zharovvv.graphics.opengl.view.LoadableGLSurfaceView
        android:id="@+id/shader_gl_surface_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="@dimen/ds_medium_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.github.zharovvv.graphics.opengl.view.LoadableGLSurfaceView
        android:id="@+id/perspective_gl_surface_view"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_margin="@dimen/ds_medium_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shader_gl_surface_view" />

</androidx.constraintlayout.widget.ConstraintLayout>