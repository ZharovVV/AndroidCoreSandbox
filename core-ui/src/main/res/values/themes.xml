<resources>
    <!-- Base application theme. -->
    <style name="Theme.DSTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ds_purple_500</item>
        <item name="colorPrimaryVariant">@color/ds_purple_700</item>
        <item name="colorOnPrimary">@color/ds_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ds_teal_200</item>
        <item name="colorSecondaryVariant">@color/ds_teal_700</item>
        <item name="colorOnSecondary">@color/ds_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Navigation bar color-->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="clickableCircleViewStyle">@style/Widget.ClickableCircleView</item>
    </style>
</resources>